{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2019"],
    "outDir": "./dist_ts",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "./**/*.test.ts"]
}
